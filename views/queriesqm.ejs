<link rel="stylesheet" type="text/css" href="/css/queries_student.css">
<html>
    <title>Query Manager</title>
    <div class="head">
        <span>Ask your queries</span>
    </div>
    <div class="messages">
        <% for(var i = 0; i < len; i++) { %>
            <% if(Query[i].UserName=="QUERY MANAGER") { %>
            <p class="txt2"><%= Query[i].Message %></p>
            <% } else { %>
            <p class="txt1"><%= Query[i].Message %></p>
            <% } %>
    </div>
    <% } %>
    <div class="queryarea">
        <form action="http://127.0.0.1:8081/Queries_new_qm" method="post">
            <textarea style="position:relative;width:93%;padding:5px;top:430px;left:7px;margin:5px;color:#00303f;font-weight:bold;" class="querymessage" name="querymessage" rows="3"></textarea>
            <button style="position:relative;color:silver;background:#00303f;top:400px;left:7px;width:70px;margin:5px;height:40px;" class="btn">SEND</button>
            <input type="text" class="inputtext" id="UserName" name="UserName" placeholder="UserName" autofocus="1" style="color:#1e1e2d; font-weight:500; margin:0;font-size:20px;font-family:'Rubik',sans-serif;border-color: transparent;outline: none; visibility:hidden;" value="<%= UserName %>" readonly/>
        </form>
    </div>
</html>